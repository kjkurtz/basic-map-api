{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": [
        "es6"
      ],
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
  },
  "include": [
      "src/**/*"
  ],
  "files": [
    "custom.d.ts",
    "node_modules/typescript/lib/lib.es6.d.ts",
    "untyped-modules.d.ts"
  ]
}
